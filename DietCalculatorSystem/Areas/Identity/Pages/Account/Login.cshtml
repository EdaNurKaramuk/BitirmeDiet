@page
@model LoginModel

@{
	ViewData["Title"] = "Giriş Yapın";
}

<div class="text-center">
	<h1 class="display-4" style="padding-top: 0.5em;">@ViewData["Title"]</h1>
	<div class="text-box" style="margin:auto; width:60%; text-align:left;padding: 10px 10px 10px 10px">
		<div style="padding: 10px 10px 10px 10px">
			<section>
				<form id="account" method="post">
                    <h4 style="font-size: 26px">Kullanıcı adınızı ve şifrenizi kullanarak giriş yapın.</h4>
					<hr />
					<div asp-validation-summary="All" class="text-danger"></div>
					<div class="form-group font-settings">
						<label asp-for="Input.FullName">Kullanıcı Adı</label>
						<input asp-for="Input.FullName" class="form-control" />
						<span asp-validation-for="Input.FullName" class="text-danger"></span>
					</div>
					<div class="form-group font-settings">
						<label asp-for="Input.Password">Şifre</label>
						<input asp-for="Input.Password" class="form-control" />
						<span asp-validation-for="Input.Password" class="text-danger"></span>
					</div>
					<div class="form-group">
						<div class="checkbox">
							<label asp-for="Input.RememberMe">
								<input asp-for="Input.RememberMe" />
								@Html.DisplayNameFor(m => m.Input.RememberMe)
							</label>
						</div>
					</div>
					<div class="form-group">
						<button type="submit" class="btn-settings font-settings">Giriş Yap</button>
					</div>
					<div class="form-group" >
						<p>
                            <a asp-page="./Register" style="color:green" asp-route-returnUrl="@Model.ReturnUrl">Yeni bir kullanıcı olarak kaydolun</a>
						</p>
					</div>
				</form>
			</section>
		</div>
	</div>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
