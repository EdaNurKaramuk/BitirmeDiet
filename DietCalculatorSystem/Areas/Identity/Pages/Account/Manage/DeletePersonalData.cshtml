@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "Kişisel Verileri Sil";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h3 style="text-align:center">@ViewData["Title"]</h3>

<div class="alert alert-warning" role="alert">
    <p class="font-settings" style="margin:auto">
        <strong>Verileri silmek hesabınızı kalıcı olarak siler ve geri alınamaz.</strong>
    </p>
</div>

<div>
    <form id="delete-user" method="post" class="form-group">
        <div asp-validation-summary="All" class="text-danger"></div>
        @if (Model.RequirePassword)
        {
            <div class="form-group font-settings">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" style="width:50%" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
        }
        <button class="btn btn-danger" style="color:black" type="submit">Verileri sil ve hesabımı kapat</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}